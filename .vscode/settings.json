{
  "files.exclude": {
    "**/node_modules": true,
    "**/.next": true,
    "**/.git": true,
    "**/.cache": true,
    "archived-docs": true,
    "docs-archived": true,
    "**/*.md": true,
    "**/*.sql": true,
    "supabase/**": true,
    ".github": true,
    ".env.example": true,
    "*.sh": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/.next": true,
    "archived-docs": true,
    "docs-archived": true,
    "**/*.md": true,
    "**/*.sql": true,
    "supabase": true
  },
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/.next/**": true,
    "**/.git/**": true,
    "**/*.md": true,
    "archived-docs/**": true,
    "docs-archived/**": true
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "files.maxMemoryForLargeFilesMB": 512,
  "typescript.max-source-file-size": 1000000,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "eslint.useFlatConfig": true
}
